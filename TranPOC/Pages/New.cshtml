@page "{id?}"
@model NewModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Add new item</h1>
    <div class="col-12 offset-lg-3 col-lg-6">
        <form asp-area="" asp-page="New" method="post">
            <div class="form-group">
                <label asp-for="Item.Desc">Work</label>
                <textarea asp-for="Item.Desc" class="form-control" id="desc" placeholder="Describe your workload"></textarea>     
                <span asp-validation-for="Item.Desc"></span>    
            </div>
            <div class="form-group">
                <label asp-for="Item.From">Start time</label>
                <input asp-for="Item.From" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control"/>
                <span asp-validation-for="Item.From"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.To">End time</label>
                <input asp-for="Item.To" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control"/>
                <span asp-validation-for="Item.To"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item.EstimatedTime">Estimated time</label>
                <input asp-for="Item.EstimatedTime" class="form-control"/>
            </div>
            <div class="collapse" id="moreItemInfo">
                <div class="form-group">
                    <label asp-for="Item.DoneAt">Done At</label>
                    <input asp-for="Item.DoneAt" class="form-control" asp-format="{0:yyyy-MM-ddTHH:mm}"/>
                </div>            
                <div class="form-group">
                    <label asp-for="Item.RealTime">Spent time</label>
                    <input asp-for="Item.RealTime" class="form-control" placeholder="hh:mm"/>
                </div>
            </div>
            <div class="form-group">
                <a class="btn btn-primary" data-toggle="collapse" href="#moreItemInfo" role="button" aria-expanded="false" aria-controls="moreItemInfo">
                    Is this item done?
                </a>
                <button type="submit" class="btn btn-success">Save Item</button>
                @if (Model.Item.Id > 0) {
                    <input type="hidden" asp-for="Item.Id"/>
                }
            </div>            
        </form>
    </div>
</div>
